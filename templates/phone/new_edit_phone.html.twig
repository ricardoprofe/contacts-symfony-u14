{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="centered">Contacts App</h1>

    {%  if phone == null %}
        <h2>{{ action }}</h2>
    {%  else %}
        <main class="contact">
            <h2> {{ action }} </h2>
            <ul>
                <li><strong>Contact:</strong> {{ contact.name }} {{ contact.surname }} </li>
                <li><strong>Type:</strong> {{ phone.type }}</li>
                <li><strong>Number:</strong> {{ phone.number }} </li>
            </ul>
        </main>
    {% endif %}
{% endblock %}
